<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="HenCoderTabTextAppearance">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <declare-styleable name="RadarView">
        <attr name="lineWidth" format="dimension|reference" />
        <attr name="lineColor" format="color|reference" />
        <attr name="textColor" format="color|reference" />
        <attr name="pointColor" format="color|reference" />
        <attr name="pointRadius" format="dimension|reference" />
        <attr name="textSize" format="dimension|reference" />
        <attr name="regionColor" format="color|reference" />
        <attr name="regionAlpha" format="integer|reference" />
    </declare-styleable>

</resources>
